        <ShellContent Title="Feedback"  Icon="baseline_feedback_24.xml" ContentTemplate="{DataTemplate pages:MainMenu}" />
    </FlyoutItem>-->

    <ShellContent Title="About"  Icon="baseline_supervised_user_circle_24.xml" ContentTemplate="{DataTemplate pages:DocumentsList}" />



</Shell>